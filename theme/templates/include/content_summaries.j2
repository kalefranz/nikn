{% import 'macros.j2' as macros with context %}
{% for article in articles_page.object_list %}
  <article>
    <header class="preview">
      <h2><a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="Permalink to {{ article.title|striptags }}">{{ article.title }}</a></h2>
      {% if article.category == 'publication' %}
        <div>
          <span class="tag_label">PUBLISHED </span><time datetime="{{ article.date.isoformat() }}" class="text-warning">{{ macros.format_date(article.date) }}</time>
          <span class="tag_label">in</span> <em>{{ article.journal }}</em>
          <div>
            {% include 'include/tag_list.j2' %}
          </div>
        </div>
      {% else %}
        <div>
          <span class="tag_label">POSTED </span><time datetime="{{ article.date.isoformat() }}" class="text-warning">{{ macros.format_date(article.date) }}</time>
          <span class="tag_label">by </span><a href="{{ SITEURL }}/{{ article.author.url }}">{{ article.author }}</a>
          &nbsp;
          {% include 'include/tag_list.j2' %}
        </div>
      {% endif %}
    </header>
    {{ article.summary }}
    <footer class="preview clearfix">
      {% include 'include/social_links_horz.j2' %}
      <a href="{{ SITEURL }}/{{ article.url }}" class="btn btn-warning btn-xs" role="button" style="float: right;">continue reading</a>
    </footer>
    {# <!--title, date, tags, category, comment count, social?--> #}
  </article>

  {% if not loop.last %}
    <hr>
  {% endif %}
{% endfor %}

{% include 'include/pagination.j2' %}